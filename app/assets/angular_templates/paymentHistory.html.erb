<div data-role="page" class="main_content span12" data-theme="b" id="paymentHistory" ng-controller="paymentHistoryCtrl">
	<style>
		.input-help {
			left: 225px;
		}
		.controls .successMsg {
			margin-bottom: 0;
		}
		.viewAccPage lable {
			width: 144px;
		}
		.daterangepicker {
			left: 93px !important;
		}
		div.outlet_text {
			padding: 20px 0 !important;
		}
	</style>
	<div class="header_title">
		<span class="manager_outlet">Manage Account</span>
		<span class="arrow-right blank_span">&nbsp;</span>
		<span style="padding: 10px 20px;"><a href="#/outlet_manager">Outlet Managers</a></span>
		<span class="blank_span"><%= image_tag 'div_line_yellow.jpg' %></span>
		<span style="padding: 10px 20px;"><a href="#/view_account">Account Details</a></span>
		<span class="blank_span"><%= image_tag 'div_line_yellow.jpg' %></span>
		<span style="padding: 10px 20px;"><span class="outletM"><a href="#/payment_history">Payment History</a></span></span>
		<span class="blank_span"><%= image_tag 'div_line_yellow.jpg' %></span>
	</div>
	<div id="payment_history" class="viewAccPage" style="margin:10px 20px;">
		<span class="selectDate">Select date range:</span>
		<input type="text" style="width: 210px;float: left" name="reservation" id="reportrange" value="Date from - Date to"  class="span4 firstshow"/>
		<div class="clr"></div>
		<div class="outlet_text" ng-show="!paymentHistoryList.length">
			<span ng-show="payHistoryListCount">Your outlets do not having any Payment Invoice.</span>
		</div>
		<div class="paymentHistoryTbl" ng-show="paymentHistoryList.length">
			<div class="payHistoryHeader">
				<div class="headCol headCol1">
					Invoice Number
				</div>
				<div class="headCol headCol2">
					Invoice Date
				</div>
				<div class="headCol headCol3">
					Outlet
				</div>
				<div class="headCol headCol6">
					Kanari Plan
				</div>
				<div class="headCol headCol4">
					Invoice Amount
				</div>
				<div class="border_right_none headCol headCol5">
					Invoice PDF
				</div>
			</div>
			<div class="paymentHistoryData" ng-repeat="paymentHistory in paymentHistoryList" >
				<div class="dataCol headCol1">
					{{paymentHistory.kanari_invoice_id}}
				</div>
				<div class="dataCol headCol2">
					{{paymentHistory.receipt_date | date:'dd/MM/yyyy'}}
				</div>
				<div class="dataCol headCol3">
					{{paymentHistory.outlet_id}}
				</div>
				<div class="dataCol headCol6">
					{{paymentHistory.kanari_plan}}
				</div>
				<div class="dataCol headCol4">
					<span>{{paymentHistory.amount_paid}}&nbsp;</span>AED
				</div>
				<div class="border_right_none dataCol headCol5">
					<a target="_blank" href="{{paymentHistory.invoice_url}}"><%= image_tag 'icon_pdf.png' %></a>
				</div>
			</div>
		</div>
	</div>
</div>
