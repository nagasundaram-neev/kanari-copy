<div data-role="page" data-theme="b" id="settings" ng-controller="settingsController">
	<div data-role="content">
		<div class="username">
			<img src="<%= asset_path "icon_logout.svg" %>" analytics-on="click" analytics-event="Log Out" class="logout" ng-click="logout()" />
			<img src="<%= asset_path "icon_home.svg" %>" class="home" ng-click="home()" />
			<div class="signUp">
				SETTINGS
			</div>
			<div class="clr"></div>
		</div>
		<div class="mobContent">
			<div data-role="fieldcontain" class="profileText" align="center">
				<span>Account</span>
			</div>
			<div data-role="fieldcontain" class="settingDiv" align="center">
				<div class="ui-input-text ui-body-a padd">
					<input data-theme="a" data-inline="true" type="text" name="txtUsername" ng-model="firstName" placeholder="First Name*"/>
				</div>
				<div class="ui-input-text ui-body-a padd">
					<input data-theme="a" data-inline="true" type="text" name="txtPassword" ng-model="lastName" class="passwordTxt" placeholder="Last Name*"/>
				</div>
				<div class="ui-input-text ui-body-a padd">
					<input data-theme="a" data-inline="true" type="email" name="txtPassword" ng-model="email" class="passwordTxt" placeholder="Email" readonly/>
				</div>
				<div class="ui-input-text ui-body-a padd" ng-show="changePass" ng-click="changePassword()">
					<input data-theme="a" data-inline="true" type="password" name="txtPassword" class="passwordTxt" placeholder="Change Password"/>
				</div>
				<div data-role="fieldcontain" class="profileText" align="center">
					<span>Profile</span>
				</div>
				<div class="ui-input-text ui-body-a padd">
					<input data-theme="a" data-inline="true" type="text" name="txtPassword" ng-model="location" class="passwordTxt" placeholder="Location"/>
				</div>
				<div data-role="fieldcontain" class="genderBtn ui-input-text ui-body-a">
					<label for="select-choice-1" style="color: #664765;float: left;margin: 1.5% 0 0;padding-left: 5px;text-align: left; text-shadow: none;width: 102px;"> Gender </label>
					<select name="select-choice-1" id="toggleswitch1" data-theme="a" ng-model="gender" data-mini="true">
						<option value="-"> - </option>
						<option value="male"> Male </option>
						<option value="female"> Female </option>
					</select>
					<div class="clr"></div>
				</div>
				<div data-role="fieldcontain" class="genderBtn ui-input-text ui-body-a">
					<label for="select-choice-2" style="color: #664765;float: left;margin: 1.5% 0 0;padding-left: 5px;text-align: left; text-shadow: none;width: 102px;"> Born in </label>
					<select name="select-choice-2" id="toggleswitch2" ng-model="date" ng-options="year.value as year.value for year in year" data-theme="a" >
						<option value="">Year</option>
					</select>
					<div class="clr"></div>
					<!-- <label class="dateLabel"> Date of birth</label>
					<div class="date">
						<input data-theme="a" data-inline="true" type="text" name="date" ng-model="date" class="dateInner" id="date" placeholder="Date of Birth"/> 
					</div>
					<div class="clr"></div> -->
				</div>
				<div data-role="fieldcontain" class="profileTextBottom" align="center">
					<span>HISTORY</span>
				</div>
				<div id="transactionHistory" ng-click="tansactionHistory()">
					<span>View Kanari History</span>
					<a href="#"><!-- <%= image_tag 'ic_calender_yellow.png' %> -->
						<img src="<%= asset_path "icon_redeem_calender.svg" %>" class="calender" />
					</a>
					<div class="clr"></div>
				</div>
			</div>
		</div>
		<div align="center">
			<span class="errorMsg" ng-show="errorMsg"> {{error}} </span>
			<span class="succMsg" ng-show="succMsg"> Settings updated successfully. </span>
		</div>
	</div>
	<div data-role="footer" class="saveDiv footerDiv" >
		<input type="button" class="signBtn" analytics-event="Settings Summary" analytics-category="Mobile app" ng-click="saveProfile()" data-inline="true" value="Save"/>
	</div>
</div>
