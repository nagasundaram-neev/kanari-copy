<div data-role="page" data-theme="b" id="showRestaurant" ng-controller="showRestaurantController">
	<style>
		
	</style>
	<div data-role="content">
		<div class="username">
			<img src="<%= asset_path "icon_home.svg" %>" class="home" ng-click="home()" />
			<div class="signUp">
				RESTAURANT DETAILS
			</div>
			<div class="clr"></div>
		</div>
		<div align="center" class="titleDiv">
			<div class="rest_name">
				<b class="restTitle">{{restaurant_name}}</b>
				<span class="address">{{restaurant_address}}</span>
			</div>
			<div class="username rest_info">
				<span class="img_outlet" style="padding: 1% 3% 1% 0"><img class="showRestIcons" src="<%= asset_path "icon_call_no.svg" %>" /></span> {{contact_number}}
			</div>
			<div class="username rest_info">
				<span class="img_outlet" style=" padding: 1% 3% 1% 0"><img class="showRestIcons" src="<%= asset_path "icon_email.svg" %>" /></span> {{email_address}}
			</div>
			<div class="username rest_info" ng-click="locationMap()">
				<span class="img_outlet" style=" padding: 1% 3% 1% 0"><img class="showRestIcons" src="<%= asset_path "icon_location_map.svg" %>" /></span> Location map
			</div>
			<div class="outlet_div rest_info">
				<div class="outlet_title ">
					<span class="img_outlet"><img class="showRestIcons" src="<%= asset_path "icon_outlet_type.svg" %>" /></span> <span class="title_outlet">Outlet Type</span>
				</div>
				<div class="outlet_info" style="padding: 3% 0;">
					<span ng-repeat="outlet in outlets">{{outlet.name}}<span ng-show=" ! $last ">, &nbsp; </span></span>
				</div>
				<div class="clr"></div>
			</div>
			<div class="outlet_div rest_info">
				<div class="outlet_title ">
					<span class="img_outlet"><img class="showRestIcons" src="<%= asset_path "icon_cusuine_type.svg" %>"/></span> <span class="title_outlet"> Cuisine Type</span>
				</div>
				<div class="outlet_info" style="padding: 3% 0;">
					<span ng-repeat="cuisine in cuisineTypes">{{cuisine.name}}<span ng-show=" ! $last ">, &nbsp; </span></span>
				</div>
				<div class="clr"></div>
			</div>
			<div class="outlet_div rest_info">
				<div class="outlet_title">
					<span class="img_outlet"><img class="showRestIcons" src="<%= asset_path "icon_opening_hours.svg" %>"/></span> <span class="title_outlet"> Opening hours</span>
				</div>
				<div class="outlet_info" style="padding: 3% 0;">
					<span>{{fromTime}} to {{toTime}}</span>
				</div>
				<div class="clr"></div>
			</div>

			<div class="outlet_div rest_info ">
				<div class="outlet_work">
					<span class="img_outlet"><img style="height:25px;" src="<%= asset_path "icon_delivery.svg" %>" /></span> <span class="title_outlet"> Delivery</span>
				</div>
				<div class="outlet_info outlet_serves imgCenter">
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_purple.svg" %>" ng-show="delivery" />
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_light_purple.svg" %>" ng-hide="delivery"/>
				</div>
				<div class="clr"></div>
			</div>
			<div class="outlet_div rest_info">
				<div class="outlet_work">
					<span class="img_outlet"><img style="height:25px;" src="<%= asset_path "icon_serves_alcohol.svg" %>" /></span> <span class="title_outlet">Serves Alcohol</span>
				</div>
				<div class="outlet_info outlet_serves imgCenter">
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_purple.svg" %>" ng-show="alcohol" />
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_light_purple.svg" %>" ng-hide="alcohol"/>
				</div>
				<div class="clr"></div>
			</div>
			<div class="outlet_div rest_info">
				<div class="outlet_work ">
					<span class="img_outlet"><img style="height:25px;" src="<%= asset_path "icon_outdoor_seating.svg" %>" /></span> <span class="title_outlet"> Outdoor seating</span>
				</div>
				<div class="outlet_info outlet_serves imgCenter">
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_purple.svg" %>" ng-show="outDoor_seating" />
					<img style="margin-top: 4%;" src="<%= asset_path "icon_tick_light_purple.svg" %>" ng-hide="outDoor_seating"/>
				</div>
			</div>
		</div>
		<div class="clr"></div>
		<div data-role="footer" class="footerDiv">
		<div class="prev" ng-click="previous()">
			<img style="margin-top: 1.5%;" src="<%= asset_path "icon_arrow_left_yellow_feedback.svg" %>"/>
			<div class="prevTxt">
				BACK
			</div>
		</div>
		<div class="nxt" ng-click="redeemUpto()" style="padding: 0.95em 0;">
			<div class="nxtTxt" >
				REDEEM POINTS
			</div>
			<div class="clr"></div>
		</div>
	</div>
	</div>
</div>
