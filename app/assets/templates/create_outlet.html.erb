<div data-role="page" style="height: 570px;" class="main_content span12" data-theme="b" id="createOutlet" ng-controller="createOutletCtrl">
	<style>
		input[type="image"], input[type="checkbox"], input[type="radio"] {
		margin: 0;
		}
		.main_content span.vertical_center {
		display: inline !important;
		vertical-align: middle !important;
		margin-right: 0px;
		padding: 0 0 8px 0;
		}
		#map_canvas {
		/*width:100%;*/
		height: 450px;
		border: 1px solid #333335;
		margin: 0 20px;
	</style>
	<div class="header_title">
		<span class="manager_outlet">Manage Outlet</span>
		<span class="arrow-right blank_span">&nbsp;</span>
		<span class="create_rest" ng-show="action"><%= image_tag 'icon_new_restaurant_outlet.png' %>Create Restaurant Outlet</span>
		<span class="create_rest" ng-hide="action"><%= image_tag 'icon_new_restaurant_outlet.png' %>Update Restaurant Outlet</span>
	</div>
	<div class="create_outlet innerDiv" data-role="content">

		<div class="clr"></div>
		<div class="leftPanel" >
			<ul class="">
				<li data-ng-class="{active:profileShow,create_outlet:true }">
					<a ng-click="changeTab('profileShow')" > <%= image_tag 'icon_profile.png' %>
					Profile
					<br/>
					<span>Name, Description and contact info</span> </a>
				</li>
				<li data-ng-class="{active:locationShow,create_location:true}" >
					<a  ng-click="changeTab('locationShow')"> <%= image_tag 'icon_location.png' %>
					Location
					<br/>
					<span>Specify the exact location of your outlet</span> </a>
				</li>
				<li data-ng-class="{active:permissionShow,create_manager:true}">
					<a ng-click="changeTab('permissionShow')"> <%= image_tag 'icon_permissions.png' %>
					Permission
					<br/>
					<span>Set user permissions for your staff</span> </a>
				</li>
				<li data-ng-class="{active:ReportShow,create_report:true}">
					<a ng-click="changeTab('ReportShow')"> <%= image_tag 'icon_reports.png' %>
					Reports
					<br/>
					<span>Who gets the reports and how often</span> </a>
				</li>
			</ul>
		</div>
		<div ng-show="profileShow">
			<div data-role="fieldcontain" class="rightPanel">
				<h1 ng-show="action">Create Restaurant Outlet</h1>
				<h1 ng-hide="action">Update Restaurant Outlet</h1>
				<form name="createOutlet" ng-app="form-example" ng-submit="create_outlet(createOutlet)" class="row form-horizontal" novalidate>
					<div class="control-group">
						<div class="controls">
							<lable>
								Restaurant Name
							</lable>

							<input data-theme="a" data-inline="true" placeholder="Restaurant Name" type="text" name="restaurant_name" ng-model="restaurant_name" class="passwordTxt" required />
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable>
								Restaurant Location
							</lable>
							<input data-theme="a" data-inline="true" placeholder="Restaurant Location" type="text" name="restaurant_location" ng-model="restaurant_location" class="passwordTxt" required />
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable>
								Contact Number
							</lable>
							<input data-theme="a" data-inline="true" placeholder="Contact Number" type="text" min="0" number-mask="" maxlength="11" name="txtPassword" ng-model="contact_number" class="passwordTxt" required />
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable>
								Email Address
							</lable>
							<input data-theme="a" data-inline="true" placeholder="Email Address" type="email" name="txtPassword" ng-model="email_address" class="passwordTxt" required />
						</div>
					</div>

					<div class="control-group">
						<div class="controls">
							<lable style="margin: 0;">
								Outlet Type
							</lable>
							<span ng-repeat="outletType in outletTypes" style="display: inline; font-size: 13px; padding: 0;" >
								<input  type="checkbox" ng-model="outletType.checked" name="group-one" value="{{outletType.id}}" >
								{{outletType.name}}
								</input> <!-- <span ng-show="outletType.checked" ></span>
								<span ng-hide="outletType.checked" >error</span>  --> </span>
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable style="margin: 0;">
								Cuisine Type
							</lable>
							<span ng-repeat="cuisineType in cuisineTypes" style="display: inline; font-size: 13px; padding: 0;">
								<input  type="checkbox" value="{{cuisineType.id}}" ng-checked="{{checkedCuisineTypes.checked}}" name="cousine{{cuisineType.id}}">
								{{cuisineType.name}}
								</input> </span>
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable >
								Opening Hours
							</lable>
							<span class="vertical_center">from</span>
							<select ng-model="fromTime">
								<option value="10.00am">10.00am</option>
								<option value="11.00am">11.00am</option>
								<option value="12.00pm">12.00pm</option>
								<option value="1.00pm">01.00pm</option>
							</select>
							&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
							<span class="vertical_center left_margin"> to</span>
							<select ng-model="toTime">
								<option value="10.00pm">10.00pm</option>
								<option value="11.00pm">11.00pm</option>
								<option value="12.00am">12.00am</option>
								<option value="1.00am">01.00am</option>
							</select>
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable style="margin: 0;">
								Delivery
							</lable>
							<input type="radio" name="delivery" ng-model="Delivery" value="true">
							Yes &nbsp;&nbsp;&nbsp;
							<input type="radio"  name="delivery" ng-model="Delivery" value="false">
							No
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable style="margin: 0;">
								Serves Alcohol
							</lable>
							<input type="radio"  name="serves_alcohol"  ng-model="serves_alcohol" value="true">
							Yes &nbsp;&nbsp;&nbsp;
							<input type="radio" ng-model="serves_alcohol" name="serves_alcohol" value="false">
							No
						</div>
					</div>
					<div class="control-group">
						<div class="controls">
							<lable style="margin: 0;">
								Outdoor Seating
							</lable>
							<input type="radio"  ng-model="outdoor_Seating" name="outdoor_Seating" value="true">
							Yes &nbsp;&nbsp;&nbsp;
							<input type="radio"  ng-model="outdoor_Seating" name="outdoor_Seating" value="false">
							No
						</div>
					</div>
					<div style="margin: 10px 0 0 130px;" class="control-group">
						<div class="controls">
							<button ng-disabled="value.length==0" type="submit" class="btn">
								Save
							</button>
							<button disabled class="btn">
								Save
							</button>
						</div>
						<p ng-show="error" class="errorMsg">
							Please fillup the form.
						</p>
						<p ng-hide="error" ></p>
						<p ng-show="successMsg" class="successMsg">
							Outlet is created Successfully
						</p>
						<p ng-hide="success"></p>
					</div>
				</form>
			</div>
			<div class="clr"></div>

		</div>

		<div id ="permission" ng-show="permissionShow">
			<div data-role="fieldcontain" class="manager_list rightPanel">
				<h3 ng-show="manager_show">Selected manager is : {{manager}}</h3>
				<div ng-show="manager_show" class="change_manager">
					Change Manager?
				</div>
				<div ng-hide="manager_show" class="change_manager">
					Select Manager
				</div>
				<div class="select_option">
					<lable>
						Select Manager
					</lable>
					<select ng-change="selectAction()" ng-model="myOption" ng-options="value.id as value.first_name for value in managerList"></select>
					<br />
					<span class="or">OR</span>
					<br />
					<br />
					<input type="button" class="btn_cls" ng-click="add_new_manager()" data-inline="true" value="Add a new manager" />
					<br/>
					<p ng-show="successmgr" class="successMsg">
						Manager updated successfully.
					</p>
					<p ng-hide="successmgr" ></p>
				</div>
			</div>
			<div data-role="fieldcontain" class="add_manager rightPanel">
				<h1>Add a new manager</h1>
				<form  name="createManager" ng-submit="create_manager(createManager)" ng-app>
					<div class="ui-input-data">
						<lable>
							First Name
						</lable>
						<input data-theme="a" data-inline="true" type="text" name="txtFirstName" ng-model="first_name" class="passwordTxt" placeholder="Enter first name" required/>
					</div>
					<div class="ui-input-data">
						<lable>
							Last Name
						</lable>
						<input data-theme="a" data-inline="true" type="text" name="txtLastName" ng-model="last_name" class="passwordTxt" placeholder="Enter last name" required/>
					</div>
					<div class="ui-input-data">
						<lable>
							Email Address
						</lable>
						<input data-theme="a" data-inline="true" type="email" name="txtEmail" ng-model="email_address_manager" class="passwordTxt" placeholder="Enter email address" required/>
					</div>
					<div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
						<lable>
							Password
						</lable>
						<input data-theme="a" data-inline="true" type="password" name="txtPassword" ng-model="password" class="passwordTxt" placeholder="Enter password" required/>
					</div>
					<div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
						<lable>
							Confirm Password
						</lable>
						<input data-theme="a" data-inline="true" type="password" name="txtResetPassword" ng-model="confirmpassword" class="passwordTxt" placeholder="Enter confirm password" required/>
					</div>
					<div class="ui-input-data">
						<lable>
							Phone
						</lable>
						<input style="float: left;" data-theme="a" data-inline="true" type="text" min="0" number-mask="" max="99" name="add_contact_number"  ng-model="add_contact_number" class="passwordTxt" placeholder="Enter phone no" required/>

					</div>
					<div class="clr"></div>
					<div style="margin: 10px 0 0 131px;">
						<button type="submit" class="submitBtn btn btn-primary btn-large" ng-click="submitted=true">
							Add Manager
						</button>
						<p ng-show="error" class="errorMsg">
							{{errorMsg}}
						</p>
						<p ng-hide="error" ></p>
						<p ng-show="success1" class="successMsg">
							Manager added successfully.
						</p>
						<p ng-hide="success" ></p>
					</div>
				</form>
			</div>
			<div class="clr"></div>

		</div>
		<div id ="reports" ng-show="ReportShow" style="height: 267px;">
			This is reports based div only
		</div>
		<div id ="location" >
			<div ng-app="kanari" class="location_map">
				<span class="location_select"> Please select your location </span>
				<div ng-controller="MapCtrl">
					<map id="map_canvas"></map>
				</div>
			</div>
		</div>
	</div>
</div>

