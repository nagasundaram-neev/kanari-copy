<div data-role="page" data-theme="b" id="redeemPoints" ng-controller="redeemPointsController">
	<div data-role="content">
		<div class="username">
			<div class="home" ng-click="home()"></div>
			<div class="signUp">
				REDEEM POINTS
			</div>
			<div class="clr"></div>
		</div>
		<div class="outerDiv" align="center">
			<div class="innrDiv">
				<div>
					You can redeem up to maximum of
				</div>
				<div>
					<span class="aed">AED</span><span class="number">{{points}}</span>
				</div>
				<!-- <span class="points">POINTS</span> -->
				<div class="clr"></div>
			</div>
			<div class="line"></div>
		</div>
		<div class="instructionDiv" align="center">
			<div class="instruction">
				How much would you like to redeem?
			</div>
			<div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
				<input data-theme="a" data-inline="true" type="text" onfocus="this.type='number';" maxlength="5" name="txtPassword" ng-model="amount" class="passwordTxt" placeholder="Amount to redeem in AED"/>
			</div>
			<p ng-show="successMsg" class="redeemSuccMsg">
				Your redemption request is being processed. Don't forget to inform your waiter that you are redeeming your Kanari points.
			</p>
			<p class="errorMsg" ng-show="erromsg" style="display: block">
				{{error}}
			</p>
		</div>
		<div class="clr"></div>
	</div>
	<div class="footerDiv">
		<div class="prev" ng-click="previous()">
			<%= image_tag 'y_arrow_left.png' %>
			<div class="prevTxt">
				BACK
			</div>
		</div>
		<div class="nxt" ng-click="confirmRedeem()" style="padding: 0.78em 0;">
			<div class="nxtTxt" >
				REDEEM POINTS
			</div>
			<div class="clr"></div>
		</div>
	</div>
</div>
