<div data-role="page" data-theme="b" id="restaurantList" ng-controller="restaurantListController">
	<div data-role="content">
		<div class="username">
			<div class="home" ng-click="home()"></div>
			<div class="signUp">
				RESTAURANT LISTING
			</div>
			<div class="clr"></div>
		</div>
		<div class="searchDiv">
			<div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
				<input data-theme="a" data-inline="true" type="text" name="txtPassword" ng-model="search" class="passwordTxt" placeholder="Search Restaurant"/>
				<div class="searchIcon"></div>
				<div class="clr"></div>
			</div>
		</div>
		<div class="restListOuterDiv">
			<div class="restListTitleDivLeft">
				RESTAURANT NAME
			</div>
			<div class="restListTitleDivRight">
				REDEEM UP TO
			</div>
			<div class="clr"></div>
		</div>
		<div>
			<div ng-repeat="outlet in outlets | filter:search" class="nameDiv" ng-click="showRestaurant(outlet.id)">
				<div class="parentDivName">
					<div class="restName">
						{{outlet.name}}
					</div>
					<div class="restAddr">
						{{outlet.address | truncate}}
					</div>
				</div>
				<div class="pointsDiv">
					<div class="aedTxt">
						<div>
							AED
						</div>
					</div>
					<div class="pointsTxt">
						<div>
							{{outlet.redeemable_points}}
						</div>
					</div>
				</div>
				<div class="clr"></div>
			</div>

			<div class="clr"></div>
		</div>
	</div>
</div>
