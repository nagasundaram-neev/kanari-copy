<div data-role="page" data-theme="b" id="restaurantList" ng-controller="restaurantListController">
	<style>
.home {
background-image: url(<%= asset_path 'sprite_mobile.png' %>
);
background-position: -309px -476px;
cursor: pointer;
float: left;
height: 54px;
width: 45px;
}
.searchIcon{
background-image: url(<%= asset_path 'sprite_mobile.png' %>
	);
	background-position: -145px -475px;
	cursor: pointer;
	float: right;
	height: 60px;
	width: 53px;
	}
	</style>
	<div data-role="content">
		<div class="username">
			<div class="home" ng-click="home()"></div>
			<div class="signUp">
				RESTAURANT LISTING
			</div>
			<div class="clr"></div>
		</div>
		<div class="searchDiv">
			<div class="ui-input-text ui-shadow-inset ui-corner-all ui-btn-shadow ui-body-a">
				<input data-theme="a" data-inline="true" type="text" name="txtPassword" ng-model="search" class="passwordTxt" placeholder="Search Restaurant"/>
				<div class="searchIcon"></div>
				<div class="clr"></div>
			</div>
		</div>
		<div class="restListOuterDiv">
			<div class="restListTitleDivLeft">
				RESTAURANT NAME
			</div>
			<div class="restListTitleDivRight">
				REDEEM UP TO
			</div>
			<div class="clr"></div>
		</div>
		<div>
			<div ng-repeat="outlet in outlets" class="nameDiv" ng-click="showRestaurant(outlet.id)">
				<div class="parentDivName">
					<div class="restName">
						{{outlet.name}}
					</div>
					<div class="restAddr">
						{{outlet.address}}
					</div>
				</div>
				<div class="pointsDiv">
					<div class="aedTxt">
						<div>
							AED
						</div>
					</div>
					<div class="pointsTxt">
						<div>
							{{outlet.redeemable_points}}
						</div>
					</div>
				</div>
				<div class="clr"></div>
			</div>

			<div class="clr"></div>
		</div>
	</div>
</div>
