<div id="signIn" align="center" ng-controller="signInController" data-role="page">
	<div class="logo">
		<%= image_tag 'logo_tablet.png' %>
	</div>
	<h1 class="loginTxt"> Log in to Kanari </h1>
	<div class="signInForm">
		<div>
			<input type="email" placeholder="Email address" ng-model="email">
		</div>
		<div>
			<input type="password" placeholder="Password" ng-model="password">
		</div>
		<fieldset class="rememberMe" data-role="controlgroup">
			<input type="checkbox" name="chkrememberMe" id="checkbox-1" class="custom" ng-model="rememberMe" />
			<label for="checkbox-1">Remember me</label>
		</fieldset>
		<button type="submit" class="signInBtn btn" ng-click="chkLogin()">Login</button>
	</div>
	<p ng-show="erromsg" class="errorMsg">{{error}}</p>
</div>